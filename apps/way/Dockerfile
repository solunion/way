# Build the docker image with `npx nx docker-build way`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t way`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system way && \
          adduser --system -G way way

COPY dist/apps/way way/
RUN chown -R way:way .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix way --omit=dev -f install

CMD [ "node", "way" ]
