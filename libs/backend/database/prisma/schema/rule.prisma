model Rule {
  id        String   @id @default(uuid())
  name      String
  type      String
  value     Json
  tenantId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  ruleSets  RuleSet[] @relation("RuleToRuleSet")
  tenant    Tenant?   @relation(fields: [tenantId], references: [id])

  @@map("rules")
} 